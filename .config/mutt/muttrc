# vim: filetype=neomuttrc
source /usr/share/mutt-wizard/mutt-wizard.muttrc # mw-autogenerated
source /home/luka/.config/mutt/accounts/1-cscs.muttrc # mw-autogenerated

# Custom options
set sort=threads
set sort_aux=reverse-date-received
## use nvim but don't force text width (looks terible if read on a phone)
set editor = "nvim +':set textwidth=0' +':set spell'"

# Quick switch between accounts
macro index,pager i1 '<sync-mailbox><enter-command>source /home/luka/.config/mutt/accounts/1-cscs.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to benedicic@cscs.ch" # mw-autogenerated
